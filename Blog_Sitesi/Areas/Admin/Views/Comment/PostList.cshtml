@using X.PagedList
@using X.PagedList.Mvc.Core
@model IEnumerable<Post>

<div class="table-responsive" style="margin-bottom: 20px;">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Postlar</th>
                <th scope="col">Yorum Sayısı</th>
            </tr>

        </thead>
        <tbody>
            @foreach (var post in Model)
            {
               
                <tr>
                    <td>
                       <a asp-action="CommentList" asp-controller="Comment" asp-area="Admin" asp-route-postid="@post.PostId" asp-route-title = "@post.Title">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.Comments.Count
                    </td>
                </tr>
              
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            @Html.PagedListPager((IPagedList)Model, _page => Url.Action("PostList", "Comment", new { area = "Admin", page = _page }))
        </div>
    </div>
</div>
