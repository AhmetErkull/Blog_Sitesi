@using X.PagedList
@using X.PagedList.Mvc.Core

<div class="table-responsive" style="margin-bottom: 20px;">
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">UserId</th>
                <th scope="col">Name</th>
                <th scope="col">Password</th>
                <th scope="col">Email</th>
                <th scope="col">CreatedAt</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.Name</td>
                    <td>@item.Password</td>
                    <td>@item.Email</td>
                    <td>@item.CreatedAt</td>

                    <td>
                        <div class="btn-group" role="group" aria-label="Actions">
                            <a class="btn btn-outline-primary" asp-action="UserEdit" asp-route-id="@item.UserId">Edit</a>
                            <a class="btn btn-outline-danger" asp-action="UserDelete" asp-route-id="@item.UserId">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-between align-items-center">
        <div>
            @Html.PagedListPager((IPagedList)Model, _page => Url.Action("UserList", "User", new { area = "Admin", page = _page }))
        </div>
        <div>
            <a class="btn btn-outline-success" asp-action="UserCreate">Create New</a>
        </div>
    </div>
</div>


