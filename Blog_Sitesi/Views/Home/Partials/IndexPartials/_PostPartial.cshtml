@model List<PostSummaryViewModel>

@foreach (var item in Model)
{
    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                <div class="image-container">
                    <img src="@item.ImageUrl" class="img-fluid rounded-start cropped-image" alt="Image">
                </div>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">
                        <a href="@Url.Action("PostSingle","Home",new{@item.Id})" class="text-decoration-none text-dark">@item.Title</a>
                    </h5>
                    <p class="card-text">
                        @if (item.Content.Length > 50)
                        {
                            @string.Concat(item.Content.Substring(0, 50), "...")
                        }
                        else
                        {
                            @item.Content
                        }
                    </p>
                    <p class="card-text">
                        <small class="text-muted">
                            @item.CreatedAt.ToString("dd.MM.yyyy")
                            &bullet;
                            @foreach (var tagname in item.TagNames)
                            {
                                <a href="@Url.Action("PostsByTag","Home",new{tagname})" class="text-decoration-none text-primary">@tagname &nbsp;</a>
                            }
                        </small>
                    </p>
                    <a href ="@Url.Action("PostSingle", "Home", new { @item.Id })" class="btn btn-outline-primary btn-sm">Fazlasını Gör</a>
              
            </div>
        </div>
    </div>
     </div>
}